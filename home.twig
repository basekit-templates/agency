{% extends "layout.twig" %}

{% block content %}

<!-- Page Content -->
<section class="page  page--home">

	{% include "includes/hero.twig" %}

	<!-- Zone Content -->
    <div id="main-scroll" class="main-content">

        <div class="container">

            <div class="home-flex">

                <div class="home-flex-item">
                    {{widget('content', 'hometitle', {
                        content: '<h4>Commodo Nibh</h4>'
                    })|raw}}
                    {{widget('content', 'homecontent', {
                        content: '<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit nec eleifend diam mollis eu.</p>'
                    })|raw}}
                </div>
        
                <div class="home-flex-item">
                    {{widget('content', 'hometitle2', {
                        content: '<h4>Mauris Blandit</h4>'
                    })|raw}}
                    {{widget('content', 'homecontent2', {
                        content: '<p>Aenean auctor convallis libero, vitae dignissim lectus lobortis id.</p>'
                    })|raw}}
                    
                </div>
        
                <div class="home-flex-item">
        
                    {{widget('profile', 'homesignup', {
                        'profileType':'form'
                    })|raw}}
                    
                </div>

            </div> 

            </div>

                <div class="main-zone">

                    {{zone('main')|raw}}

                </div>

            </div>

        </div>

    </div>

</section>

<!-- Footer -->

{% include "includes/footer.twig" %}

{% endblock %}


{% block bodyscripts %}

<script src="{{asset('js/hero.js')}}"></script>

<!-- Smooth Scroll -->
<script>
    $(document).ready(function(){

        $('a[href*=#]').bind('click', function(e) {
            e.preventDefault();

            var target = $(this).attr("href");

            $('html, body').stop().animate({ scrollTop: $(target).offset().top}, 1000, function() {
                location.hash = target;
            });

            return false;
        });

    });

</script>

{% endblock %}
